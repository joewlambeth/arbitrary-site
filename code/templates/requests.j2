{% extends 'TEMPLATE.j2' %}

{% block title %}{% block header %}Requests{% endblock %}{% endblock %}
{% block content %}
<div class="container">
				<h1>Submit a Request</h1>
				<div class="paragraph">
					<form>
						<p>Name:</p> <input name="name" type="text"/>
						<p>Email:</p> <input name="email" type="text"/>
						<p>Request:</p> <textarea name="request" rows="5" cols="30"> </textarea>
						</br> </br>
						<button type="submit">Submit</button>
					</form>
				</div>
				<div class="paragraph">
					<p>Prayer requests can also be submitted to <a>me@example.com</a>
				</div>
</div>
{% endblock %}